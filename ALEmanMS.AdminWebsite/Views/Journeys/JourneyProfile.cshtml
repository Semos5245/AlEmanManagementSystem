            planeWeight.attr('data-type', 'planeWeight');
            //planeWeight.val(data.planeWeight);

            // CasedOriginalNumber
            var casedOriginalNumber = row.find("#txtAddCasedOriginalNumber");
            casedOriginalNumber.removeAttr('id');
