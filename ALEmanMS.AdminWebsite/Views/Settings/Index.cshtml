@model ALEmanMS.Models.Setting

@{
    ViewBag.Title = "الإعدادات";
    var rightSideLabels = "float:right;";
}

<div class="card-box">
    <div class="row" dir="rtl">
        <div class="col-md-6">
            <form action="@Url.Action("Edit","Settings")" method="post">

                <div class="form-group col-12" >
                    <label for="txtPackagingPrice" class="label-control" style="@rightSideLabels">سعر الخيش</label>

                    <input type="text" value="@Model.PackagingPrice" id="txtPackagingPrice" class="form-control" name="packagingPrice" />
                </div>

                <div class="form-group col-12">
                    <label for="txtLandShippingPrice" class="label-control" style="@rightSideLabels">سعر شحن الكيلو بري</label>

                    <input type="text" value="@Model.LandShippingPerKiloPrice" class="form-control" id="txtShippingPrice" name="landShippingPrice" />
                </div>

                <div class="form-group col-12">
                    <label for="txtNauticalShippingPrice" class="label-control" style="@rightSideLabels">سعر شحن الكيلو بحري</label>

                    <input type="text" value="@Model.NauticalShippingPerKiloPrice" class="form-control" id="txtShippingPrice" name="nauticalShippingPrice" />
                </div>

                <div class="form-group col-12">
                    <label for="txtAirShippingPrice" class="label-control" style="@rightSideLabels">سعر شحن الكيلو جوي</label>

                    <input type="text" value="@Model.AirShippingPerKiloPrice" class="form-control" id="txtShippingPrice" name="airShippingPrice" />
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-success" style="@rightSideLabels" value="حفظ التغيرات" />
                </div>
            </form>
        </div>
    </div>
</div>

