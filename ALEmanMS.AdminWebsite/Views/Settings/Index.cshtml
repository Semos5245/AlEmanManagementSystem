@model ALEmanMS.Models.Setting

@{
    ViewBag.Title = "الإعدادات";
}

<div class="card-box">

    <div class="col-md-6">
        <form action="@Url.Action("Edit","Settings")" method="post">

            <div class="form-group col-12">
                <label for="txtPackagingPrice" class="label-control">سعر الخيش</label>

                <input type="text" value="@Model.PackagingPrice" id="txtPackagingPrice" class="form-control" name="packagingPrice" />
            </div>

            <div class="form-group col-12">
                <label for="txtShippingPrice" class="label-control">سعر شحن الكيلو</label>

                <input type="text" value="@Model.ShippingPerKiloPrice" class="form-control" id="txtShippingPrice" name="shippingPrice"/>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-success" value="حفظ التغيرات"/>
            </div>
        </form>
    </div>

</div>

